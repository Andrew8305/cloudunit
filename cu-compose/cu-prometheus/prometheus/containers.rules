ALERT cu_jenkins_down
  IF absent(container_memory_usage_bytes{name="cu-jenkins"})
  FOR 5s
  LABELS { severity = "critical" }
  ANNOTATIONS {
    summary = "cu-jenkins is down",
    description = "Jenkins has been down for more than 5 secondes",
  }

